@import "~src/styles/partials/variables/variables"
@import "~src/styles/partials/mixins/mixins"

:host
    width 100%
    display flex
    flex-direction column

.time_for_tea
    // background-color $cl--second
    text-align center

    h1
        fz-scale--seven()
        color white
        letter-spacing 0.035em

    &--active::after
        content ''
        display block
        width 100%
        height 300px
        +above(3)
            height 400px
        +above(6)
            height 500px
        background-image url('src/assets/images/clickme-03.svg')
        background-repeat no-repeat
        background-position center
        background-size contain

.tea_info
    width 80%
    +above(3)
        width 60%
    margin $sp--plus-half auto
    padding $sp
    text-align center
    border-bottom 2px solid $cl--second--low
    border-right 2px solid $cl--second--low
    border-radius $sp
    background-color $cl--second

    &__primary
        color white
        font-weight bold
        fz-scale--one()

        span
            display block

        &::after
            content ''
            display block
            margin $sp--half auto
            border 1px solid white
            width 92%
            height 0px

    &__name
        fz-scale--four()
        letter-spacing 0.02em
        font-family $ff--heading
        font-weight normal
        color $cl--med

    &__secondary
        margin-top $sp-half
        color white
        display flex
        flex-direction row
        justify-content center
        align-items center

    &__void_button
        width $sp
        height $sp
        margin-right $sp--third

        &::before
            content ''
            display inline-block
            width $sp
            height $sp
            background-image url("src/assets/images/cross.svg")
            background-repeat no-repeat
            background-position center
            background-size cover
